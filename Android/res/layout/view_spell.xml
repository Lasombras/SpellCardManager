<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+viewSpell/MainLayout"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:orientation="vertical" android:gravity="center_vertical">
    <ImageView android:id="@+viewSpell/spellHeaderImage" android:background="@drawable/card_header" android:layout_height="wrap_content" android:layout_width="fill_parent"></ImageView>
    <ImageView android:id="@+viewSpell/spellFooterImage" android:background="@drawable/card_footer" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"></ImageView>
    <ImageView android:id="@+viewSpell/spellCenterImage" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_alignParentLeft="true" android:layout_below="@+viewSpell/spellHeaderImage" android:layout_above="@+viewSpell/spellFooterImage" android:background="@drawable/card_center"></ImageView>
    <ImageView android:layout_width="36dp" android:id="@+viewSpell/spellImage" android:layout_height="36dp" android:layout_alignParentRight="true" android:layout_marginTop="15dp" android:layout_marginRight="15dp" android:src="@drawable/empty_icon"></ImageView>
    
    <ViewFlipper android:id="@+viewSpell/flipperSpellNameText" android:layout_width="fill_parent" android:layout_height="34dp" android:flipInterval="3500" android:layout_alignParentTop="true" android:paddingLeft="6dp" android:layout_toLeftOf="@+viewSpell/spellLogoImage" android:layout_alignParentLeft="true" android:layout_above="@+viewSpell/spellSchoolText">
    	<TextView android:textAppearance="?android:attr/textAppearanceLarge" android:text="TitleName"  android:layout_height="fill_parent" android:id="@+viewSpell/spellNameText" android:lines="1" android:focusable="true" android:focusableInTouchMode="true" android:scrollHorizontally="true" android:ellipsize="marquee" android:clickable="true" android:textColor="#543413" android:gravity="center_vertical" android:layout_width="fill_parent"></TextView>
    	<TextView android:textAppearance="?android:attr/textAppearanceLarge" android:text="OriginalName"  android:layout_height="fill_parent" android:id="@+viewSpell/spellOriginalNameText" android:lines="1" android:focusable="true" android:focusableInTouchMode="true" android:scrollHorizontally="true" android:layout_width="wrap_content" android:ellipsize="marquee" android:clickable="true" android:textColor="#543413" android:gravity="center_vertical"></TextView>
    </ViewFlipper>
    
    <ScrollView android:id="@+viewSpell/scrollView1" android:layout_alignParentRight="true" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_below="@+viewSpell/spellInfosText" android:layout_above="@+viewSpell/spellClassText" android:layout_toRightOf="@+viewSpell/spellComponent01" android:paddingRight="4dp" android:paddingBottom="2dp">
    	<WebView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="TextView" android:id="@+viewSpell/spellContentText" android:textColor="#000000" android:paddingRight="4dp" android:tag="normal"></WebView>
    </ScrollView>
    <TextView android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:textStyle="bold" android:textColor="#FFFFFF" android:lines="1" android:scrollHorizontally="true" android:height="18dp" android:paddingRight="4dp" android:paddingLeft="4dp" android:id="@+viewSpell/spellClassText" android:focusable="true" android:focusableInTouchMode="true" android:clickable="true" android:layout_alignParentRight="true" android:gravity="center_vertical" android:layout_width="wrap_content" android:text="levelPlayerClass" android:minWidth="20dp" android:ellipsize="marquee" android:textSize="14dp"></TextView>
    <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:text="TextView" android:id="@+viewSpell/spellComponent01" android:background="@drawable/dot" android:layout_alignParentLeft="true" android:visibility="invisible" android:gravity="center" android:textColor="#FFFFFF" android:textStyle="bold" android:layout_height="26dp" android:layout_width="31dp" android:paddingRight="12dp" android:paddingBottom="4dp" android:layout_alignTop="@+viewSpell/spellInfosText" android:layout_marginTop="6dp"></TextView>
    <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:text="TextView" android:id="@+viewSpell/spellComponent02" android:background="@drawable/dot" android:layout_height="26dp" android:layout_width="31dp" android:layout_below="@+viewSpell/spellComponent01" android:layout_alignParentLeft="true" android:layout_marginTop="2dp" android:visibility="invisible" android:gravity="center" android:textColor="#FFFFFF" android:textStyle="bold" android:paddingBottom="4dp" android:paddingRight="12dp"></TextView>
    <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:text="TextView" android:id="@+viewSpell/spellComponent03" android:background="@drawable/dot" android:layout_height="26dp" android:layout_width="31dp" android:layout_below="@+viewSpell/spellComponent02" android:layout_alignParentLeft="true" android:layout_marginTop="2dp" android:visibility="invisible" android:gravity="center" android:textColor="#FFFFFF" android:textStyle="bold" android:paddingRight="12dp" android:paddingBottom="4dp"></TextView>
    <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:text="TextView" android:id="@+viewSpell/spellComponent04" android:background="@drawable/dot" android:layout_height="26dp" android:layout_width="31dp" android:layout_below="@+viewSpell/spellComponent03" android:layout_alignParentLeft="true" android:layout_marginTop="2dp" android:visibility="invisible" android:gravity="center" android:textColor="#FFFFFF" android:textStyle="bold" android:paddingRight="12dp" android:paddingBottom="4dp"></TextView>
    <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:text="TextView" android:id="@+viewSpell/spellComponent05" android:background="@drawable/dot" android:layout_height="26dp" android:layout_width="31dp" android:layout_below="@+viewSpell/spellComponent04" android:layout_alignParentLeft="true" android:layout_marginTop="2dp"  android:visibility="invisible" android:gravity="center" android:textColor="#FFFFFF" android:textStyle="bold" android:paddingRight="12dp" android:paddingBottom="4dp"></TextView>
    <TextView android:layout_width="wrap_content" android:text="TextView" android:layout_height="wrap_content" android:id="@+viewSpell/spellInfosText" android:layout_alignParentRight="true" android:textColor="#000000" android:layout_below="@+viewSpell/spellHeaderImage" android:paddingTop="2dp" android:textSize="14dp" android:layout_toRightOf="@+viewSpell/spellComponent01" android:paddingRight="4dp"></TextView>
    <TextView android:gravity="center" android:textColor="#FFFFFF" android:layout_alignParentLeft="true" android:text="APG" android:textStyle="bold" android:background="@drawable/dot2" android:paddingBottom="4dp" android:paddingRight="4dp" android:textSize="12dp" android:layout_height="26dp" android:layout_width="31dp" android:layout_above="@+viewSpell/spellFooterImage" android:id="@+viewSpell/spellSourceText"></TextView>
    <ImageView android:id="@+viewSpell/spellLogoImage" android:background="@drawable/logo" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_height="71dp" android:layout_width="71dp"></ImageView>
    <TextView android:textColor="#866951" android:gravity="top|right" android:id="@+viewSpell/spellSchoolText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="TextView" android:textSize="14dp" android:layout_alignBottom="@+viewSpell/spellHeaderImage" android:layout_toLeftOf="@+viewSpell/spellLogoImage" android:paddingBottom="6dp" android:lines="1" android:clickable="true" android:ellipsize="marquee" android:focusable="true" android:focusableInTouchMode="true"></TextView>
    <ImageView android:src="@drawable/dot_comment" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_above="@+viewSpell/spellSourceText" android:layout_alignParentLeft="true" android:id="@+viewSpell/spellComment"></ImageView>
    
</RelativeLayout>
